
/* common */
.contact-box,.message-box{margin-top: 44rpx;padding: 0 24rpx;-webkit-box-sizing: border-box;box-sizing: border-box;}
.title-box .title-cn{font-size:32rpx; color: rgb( 68, 68, 68 );text-align: center;height: 32rpx;line-height: 32rpx;overflow: hidden;}
.title-box .title-en{font-size: 22rpx;color: rgb( 51, 51, 51 );text-align: center;height: 30rpx;line-height: 30rpx;margin: 16rpx 0 46rpx 0;overflow: hidden;}

.contact-box .contact{padding-bottom: 24rpx;}
.contact-box .contact .contact_con{ font-size: 26rpx; color: rgb( 102, 102, 102 );line-height: 48rpx;}
.contact-box .contact .contact_con image{max-width: 100%;display: block;margin: 26rpx 0;}
.message-space{width: 100%;height: 24rpx;background:#eee;}
.message-box .message-content .item,.message-box .message-content .item-textarea{display: block;width: 100%;-webkit-box-sizing:border-box;box-sizing:border-box;border:1rpx solid #ccc;overflow: hidden;border-radius: 5rpx;}
.message-box .message-content .item{height: 66rpx;margin-bottom: 20rpx;display: -webkit-box;display: -ms-flexbox;display: flex;}
.message-box .message-content .item-textarea{display: -webkit-box;display: -ms-flexbox;display: flex;}
.message-box .message-content .lable,.message-box .message-content input{height: 66rpx;line-height: 64rpx; font-size: 28rpx;color: rgb( 68, 68, 68 );}
.message-box .message-content .lable{padding: 0 8rpx 0 24rpx;}
.message-box .message-content input{-webkit-box-flex: 1;-ms-flex: 1;flex: 1;}
.message-box .message-content textarea{height: 146rpx;line-height: 64rpx;font-size: 28rpx;color: rgb( 68, 68, 68 );-webkit-box-flex: 1;-ms-flex: 1;flex: 1;}
.message-box .message-content .btn_submit{width: 66%;height: 66rpx;line-height: 66rpx;color: #fff;text-align: center; background-color: rgb( 9, 187, 7 );border-radius: 5px;margin: 28rpx auto;}
