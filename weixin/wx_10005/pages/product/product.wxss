
.product-msg,.product-info{box-sizing: border-box;padding: 0 24rpx;padding-bottom:40rpx;width: 100%;}

.product-img{ height: 460rpx; display: flex; justify-content: center; align-items: center; overflow: hidden;}


.product-msg .title{height: 74rpx;border-top: 1rpx solid #eee;line-height: 74rpx;font-size: 32rpx;color: rgb( 68, 68, 68 );}
.product-msg .item{height: 70rpx;border-top: 1rpx solid #eee;line-height: 70rpx;font-size: 26rpx; color: rgb( 68, 68, 68 );}

.product-space{width: 100%;height: 24rpx;background:#eee;}

.product-info{overflow: hidden; margin:0 auto;}
.product-info .title{font-size: 32rpx;color: rgb( 68, 68, 68 );height: 80rpx;line-height: 80rpx;}
.product-info .product-infoo{color: rgb( 102, 102, 102 );}
.product-infoo image,.product-infoo text,.product-infoo view{max-width: 100%;display: block;}



